<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/col_content_bg"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/ds_mid"
        android:text="创建文件夹"
        android:textSize="@dimen/ds_normal_text_size_little"
        android:textColor="@color/col_text"
        android:layout_marginTop="@dimen/ds_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_margin="@dimen/ds_mid"
        android:id="@+id/id_et_name"
        android:hint="文件夹的名称"
        android:background="@drawable/normal_et_bg_selector"
        android:textColor="@color/col_text"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/ds_normal_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds_mid"
        android:layout_marginRight="@dimen/ds_mid"
        android:layout_marginBottom="@dimen/ds_mid"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_bt_create"
            android:layout_weight="1"
            android:text="创建"
            android:textSize="@dimen/ds_normal_text_size_little"
            android:background="@drawable/normal_bt_selector"
            android:textColor="@drawable/normal_tx_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/id_bt_cancel"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="@dimen/ds_normal_text_size_little"
            android:background="@drawable/normal_bt_selector"
            android:textColor="@drawable/normal_tx_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
